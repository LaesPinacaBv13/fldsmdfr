<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/inputCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese cantidad"
            android:inputType="numberDecimal" />

        <TextView android:text="De:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/grupoDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/rbDolar" android:text="Dólar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbEuro" android:text="Euro" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbLibra" android:text="Libra" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbRupia" android:text="Rupia" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbReal" android:text="Real" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbPeso" android:text="Peso" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbYuan" android:text="Yuan" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbYen" android:text="Yen" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbSol" android:text="Sol" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView android:text="A:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/grupoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/rbDolarA" android:text="Dólar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbEuroA" android:text="Euro" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbLibraA" android:text="Libra" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbRupiaA" android:text="Rupia" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbRealA" android:text="Real" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbPesoA" android:text="Peso" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbYuanA" android:text="Yuan" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbYenA" android:text="Yen" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbSolA" android:text="Sol" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <Button android:id="@+id/btnConvertir" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Convertir" />

        <TextView android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="10dp"/>
    </LinearLayout>
</ScrollView>
